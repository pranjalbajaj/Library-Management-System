     Connection con;
    Statement st;
    PreparedStatement pst;
    ResultSet rs;

    public BookList() {
        initComponents();

         try{
        Class.forName("com.mysql.jdbc.Driver");
        con=DriverManager.getConnection("jdbc:mysql://localhost:3306/pranjal","root","mynewpassword");
        pst=con.prepareStatement("select * from book");
        rs=pst.executeQuery();
        while(rs.next())
        {
            jTextArea1.append(rs.getString(1)+"\t"+rs.getString(2)+"\t"+rs.getString(3)+"\n");
        }
        }
        catch(Exception e)
        {
            System.out.println(e);
        }

    }

