    /** Creates new form MemberList */
    public MemberList() {
        initComponents();
        
        try{
        Class.forName("com.mysql.jdbc.Driver");
        con=DriverManager.getConnection("jdbc:mysql://localhost:3306/pranjal","root","mynewpassword");
        pst=con.prepareStatement("select * from member");
        rs=pst.executeQuery();
        while(rs.next())
        {
            jTextArea1.append(rs.getString(1)+"\t"+rs.getString(2)+"\t"+rs.getString(3)+"\t"+rs.getString(4)+"\t"+rs.getString(5)+"\t"+rs.getString(6)+rs.getString(7)+"\n");
        }
        }
        catch(Exception e)
        {
            System.out.println(e);
        }

    }

