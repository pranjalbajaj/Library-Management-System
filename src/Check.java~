    Connection con;
    Statement st;
    PreparedStatement pst;
    ResultSet rs;

    public Check() {
        initComponents();
        
         try{
        Class.forName("com.mysql.jdbc.Driver");
        con=DriverManager.getConnection("jdbc:mysql://localhost:3306/pranjal","root","mynewpassword");
        pst=con.prepareStatement("select name,book_issued,return_date from member where return_date is not null");
        rs=pst.executeQuery();
        while(rs.next())
        {
            jTextArea1.append(rs.getString("name")+"\t\t"+rs.getString("return_date")+"\t\t"+rs.getString("book_issued")+"\n");
        }
        }
        catch(Exception e)
        {
            System.out.println(e);
        }

    }

