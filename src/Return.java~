    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        // TODO add your handling code here:
        try{
         pst=con.prepareStatement("select * from member where name=?");
         pst.setString(1,jTextField1.getText());
         rs=pst.executeQuery();
            if(rs.next())
            {
                pst=con.prepareStatement("select * from member where name=? and book_issued=?");
                pst.setString(1,jTextField1.getText());
                pst.setString(2,jTextField2.getText());
                rs=pst.executeQuery();
                if(rs.next())
                {
                pst=con.prepareStatement("update member set book_issued=null,issue_date=null,return_date=null where name=?");
                pst.setString(1,jTextField1.getText());
                pst.executeUpdate();
                pst=con.prepareStatement("update book set status='available' where bookname=?");
                pst.setString(1,jTextField2.getText());
                pst.executeUpdate();
                JOptionPane.showMessageDialog(null,jTextField2.getText()+" returned ") ;
                }
                else
                {
                    JOptionPane.showMessageDialog(null,jTextField2.getText()+" is not issued to "+jTextField1.getText()) ;
                }

            }
            else
            {
             JOptionPane.showMessageDialog(null,jTextField1.getText()+" is not a member") ;
            }
        }
        catch(Exception e)
        {
            System.out.println(e);
        }
    }//GEN-LAST:event_jButton1ActionPerformed

